{
	"name": "sveltekit-website",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "npm run build && npx wrangler pages dev",
		"prepare": "svelte-kit sync || echo ''",
		"deploy": "npm run build && npx wrangler pages deploy",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"optimize:images": "sharp -i './content/blog/**/_raw/*.{png,jpg,jpeg,webp,tiff}' -o '{dir}/../{name}.jpg' --format jpg --quality 80 --mozjpeg",
		"optimize:markdown": "node fix-markdown-extensions.js",
		"optimize": "npm run optimize:images && npm run optimize:markdown"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"mdsvex": "^0.12.6",
		"mdsvex-relative-images": "^2.0.0",
		"sharp": "^0.34.5",
		"sharp-cli": "^5.2.0",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"wrangler": "^4.53.0"
	}
}
